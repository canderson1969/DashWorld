# Server Configuration
PORT=5000
NODE_ENV=development

# Security (REQUIRED - change in production!)
JWT_SECRET=change-this-to-a-secure-random-string

# Database Connection (REQUIRED)
# PostgreSQL connection URL
# Local development: postgresql://localhost:5432/dashworld
# Railway: postgresql://postgres:password@host:port/railway
DATABASE_URL=postgresql://localhost:5432/dashworld

# Storage Configuration
# Provider: 'local' for development, 'r2' for production
STORAGE_PROVIDER=local

# Local storage paths (used when STORAGE_PROVIDER=local)
UPLOAD_DIR=../uploads
THUMBNAILS_DIR=../uploads/thumbnails
DATA_DIR=./data

# Cloudflare R2 Configuration (used when STORAGE_PROVIDER=r2)
# Get these from Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key
R2_BUCKET_NAME=dashworld-uploads
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# AWS Lambda Configuration (optional - for cloud video processing)
# If not set, video processing falls back to local FFmpeg
LAMBDA_FUNCTION_NAME=dashworld-video-processor
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Webhook Configuration (for Lambda callbacks)
# Generate a secure random string for production
WEBHOOK_SECRET=your-webhook-secret

# CORS - Comma-separated list of allowed origins
# Development defaults: http://localhost:3000,http://localhost:5173
# Production example: https://dashworld.com,https://www.dashworld.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
